<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/score_view">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ttt_button_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TicTacToe"
            android:textColor="@color/score_view"
            android:fontFamily="@font/title_font"
            android:textSize="30sp"/>
 </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/score_view">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20sp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:freezesText="true"
                android:text="Player 1: 0"
                android:textColor="@color/points_text"
                android:textSize="30sp"
                android:fontFamily="@font/retrofont2"/>

            <TextView
                android:id="@+id/text_view_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_player1"
                android:freezesText="true"
                android:text="Player 2: 0"
                android:textColor="@color/points_text"
                android:textSize="30sp"
                android:fontFamily="@font/retrofont2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/tictactoe2"></ImageView>
        </LinearLayout>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ttt_button_st">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

        <android.widget.Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ttt_button00"
            android:freezesText="true"
            android:textColor="@color/ttt_text"
            android:fontFamily="@font/x_si_o"
            android:textSize="80sp" />

        <android.widget.Button
            android:id="@+id/button_01"
            android:background="@drawable/ttt_button01"
            android:textColor="@color/ttt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:textSize="80sp"
            android:fontFamily="@font/x_si_o" />

        <android.widget.Button
            android:id="@+id/button_02"
            android:background="@drawable/ttt_button02"
            android:textColor="@color/ttt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:textSize="80sp"
            android:fontFamily="@font/x_si_o"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.widget.Button
            android:id="@+id/button_10"
            android:background="@drawable/ttt_button10"
            android:textColor="@color/ttt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:textSize="80sp"
            android:fontFamily="@font/x_si_o"/>

        <android.widget.Button
            android:id="@+id/button_11"
            android:background="@drawable/ttt_button11"
            android:textColor="@color/ttt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:textSize="80sp"
            android:fontFamily="@font/x_si_o"/>

        <android.widget.Button
            android:id="@+id/button_12"
            android:background="@drawable/ttt_button12"
            android:textColor="@color/ttt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:textSize="80sp"
            android:fontFamily="@font/x_si_o"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">

        <android.widget.Button
            android:id="@+id/button_20"
            android:background="@drawable/ttt_button20"
            android:textColor="@color/ttt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:textSize="80sp"
            android:fontFamily="@font/x_si_o"/>

        <android.widget.Button
            android:id="@+id/button_21"
            android:background="@drawable/ttt_button21"
            android:textColor="@color/ttt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:textSize="80sp"
            android:fontFamily="@font/x_si_o"/>

        <android.widget.Button
            android:id="@+id/button_22"
            android:background="@drawable/ttt_button22"
            android:textColor="@color/ttt_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:freezesText="true"
            android:textSize="80sp"
            android:fontFamily="@font/x_si_o"/>
    </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:gravity="center">

        <android.widget.Button
            android:id="@+id/button_reset"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/resetbutton"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

